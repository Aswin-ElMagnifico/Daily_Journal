<%- include('partials/header'); %>

<h1>Compose</h1>


<form action="/compose" method="POST">
    <div class="form-group">
      <label for="titleInput">Title</label>
      <input type="text" class="form-control" name="postTitle" id="titleInput" >
      
    </div>

    <div class="form-group">
      <label for="postInput">Post</label>
      <textarea class="form-control" name="postBody" id="postInput" cols="30" rows="10"></textarea>
    </div>

    <div class="form-group">
      <label for="pwd">Secret</label>
      <div class="row">
         <div class="form-group col-xs-5 col-md-3">
        <input type="password" class="form-control" name="passwd" id="pwd">
      </div>
      </div>
     
      
    </div>
   
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include('partials/footer'); %>