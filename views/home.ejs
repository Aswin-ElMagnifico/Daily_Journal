
<%- include('partials/header'); %> 

<h1>Home</h1>
<p><%=homeMessage %></p>

<% listOfPosts.forEach(post => { %>
    <h2><%= post.title %> </h2>
    <% if (post.body.length > 100) { %>
        <p><%= post.body.substring(0,100) + "... " %> <a href="/posts/<%=post.title %>" >Read More</a></p>
    <% } else { %> 
        <p><%= post.body %> <a href="/posts/<%= post.title %>">View</a></p>
     <% } %>
    
   
    
<% }) %>

<%- include('partials/footer'); %> 